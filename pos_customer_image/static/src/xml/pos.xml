<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-extend="ActionpadWidget">
        <t t-jquery=".fa.fa-user" t-operation="replace">
        	<t t-if="! widget.pos.get_client() or ! widget.pos.config.allow_customer_image">
            	<i class='fa fa-user' />
            </t>
            <t t-if="widget.pos.get_client() and widget.pos.config.allow_customer_image">
            	<div style="float: left;margin-left: -37px;"><img t-attf-src="/web/image/res.partner/#{widget.pos.get_client().id}/image_small" style="width: 50px;height: 45px;"/></div>
            </t>
        </t>
    </t>

    <t t-extend="ClientDetails">
        <t t-jquery=".client-details-right" t-operation="append">
          <div class='client-detail'>
              <span class='label'>THC Products today (g)</span>
              <t t-if='partner.x_studio_thc_products_today'>
                  <span class='detail client-thc_limit'><t t-esc="partner.x_studio_thc_products_today"></t>/28g</span>
              </t>
              <t t-if='!partner.x_studio_thc_products_today'>
                  <span class='detail client-thc_limit empty'>N/A</span>
              </t>
          </div>
          <t t-if="widget.pos.get_client()">
          </t>
        </t>
    </t>
</templates>
